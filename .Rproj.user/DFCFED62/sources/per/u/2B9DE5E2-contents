# 3 Suma de los primeros N números:
N <- as.numeric(readline(prompt = "Introduce un número N: "))
suma <- 0

if (!is.na(N) && N > 0) {
  for (i in 1:N) {
    suma <- suma + i
  }
  cat("La suma de los números del 1 al", N, "es:", suma, "\n")
} else {
  cat("Por favor, introduce un número válido y positivo.\n")
}